@model IEnumerable<OgrenciDersTakip.Models.TBolum>
@{
    ViewData["Title"] = "Bölüm Listesi";
}
<h2>Bölüm Listesi</h2>
<p>
    <a class="btn btn-primary" asp-action="Create">Yeni Bölüm Ekle</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>Bölüm Adı</th>
            <th>Fakülte</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.BolumAd</td>
            <td>@item.Fakulte?.FakulteAd</td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.BolumID" class="btn btn-sm btn-warning me-1"><i class="bi bi-pencil"></i> Düzenle</a>
                <a asp-action="Details" asp-route-id="@item.BolumID" class="btn btn-sm btn-info me-1"><i class="bi bi-info-circle"></i> Detay</a>
                <a asp-action="Delete" asp-route-id="@item.BolumID" class="btn btn-sm btn-danger"><i class="bi bi-trash"></i> Sil</a>
            </td>
        </tr>
    }
    </tbody>
</table>