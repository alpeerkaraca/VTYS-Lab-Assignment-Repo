<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - OgrenciDersTakip</title>
    <script type="importmap"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/OgrenciDersTakip.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.5.0/font/bootstrap-icons.css">
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark bg-primary shadow-sm mb-3">
            <div class="container-fluid">
                <a class="navbar-brand fw-bold" asp-area="" asp-controller="Home" asp-action="Index">
                    <i class="bi bi-mortarboard"></i> OgrenciDersTakip
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#mainNavbar" aria-controls="mainNavbar" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="mainNavbar">
                    <ul class="navbar-nav ms-auto mb-2 mb-lg-0">
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-area="" asp-controller="Home" asp-action="Index"><i class="bi bi-house"></i> Ana Sayfa</a>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle text-white" href="#" id="islemlerDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                <i class="bi bi-list-task"></i> İşlemler
                            </a>
                            <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="islemlerDropdown">
                                <li><a class="dropdown-item" asp-controller="Ogrenci" asp-action="Index"><i class="bi bi-person"></i> Öğrenci</a></li>
                                <li><a class="dropdown-item" asp-controller="Bolum" asp-action="Index"><i class="bi bi-diagram-3"></i> Bölüm</a></li>
                                <li><a class="dropdown-item" asp-controller="Fakulte" asp-action="Index"><i class="bi bi-building"></i> Fakülte</a></li>
                                <li><a class="dropdown-item" asp-controller="Ders" asp-action="Index"><i class="bi bi-journal-bookmark"></i> Ders</a></li>
                                <li><hr class="dropdown-divider"></li>
                                <li><a class="dropdown-item" asp-controller="OgrenciDers" asp-action="List"><i class="bi bi-list-check"></i> Atama & Not</a></li>
                                <li><a class="dropdown-item" asp-controller="OgrenciDers" asp-action="Assign"><i class="bi bi-plus-circle"></i> Ders Atama</a></li>
                            </ul>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white"><i class="bi bi-githu"></i> GitHub</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - OgrenciDersTakip
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
