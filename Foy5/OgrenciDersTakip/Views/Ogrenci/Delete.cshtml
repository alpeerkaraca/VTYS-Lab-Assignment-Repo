@model OgrenciDersTakip.Models.TOgrenci
@{
    ViewData["Title"] = "Öğrenci Sil";
}
<h2>Öğrenci Sil</h2>
<h4>Bu öğrenciyi silmek istediğinize emin misiniz?</h4>
<div>
    <dl class="row">
        <dt class="col-sm-2">Ad</dt>
        <dd class="col-sm-10">@Model.Ad</dd>
        <dt class="col-sm-2">Soyad</dt>
        <dd class="col-sm-10">@Model.Soyad</dd>
        <dt class="col-sm-2">Bölüm</dt>
        <dd class="col-sm-10">@Model.Bolum?.BolumAd</dd>
    </dl>
    <form asp-action="Delete">
        <input type="hidden" asp-for="OgrenciID" />
        <button type="submit" class="btn btn-danger">Sil</button>
        <a asp-action="Index" class="btn btn-secondary">Geri</a>
    </form>
</div>