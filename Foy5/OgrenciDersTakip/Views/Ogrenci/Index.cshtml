@model IEnumerable<OgrenciDersTakip.Models.TOgrenci>
@{
    ViewData["Title"] = "Öğrenci Listesi";
}
<div class="container py-4">
    <div class="row justify-content-center">
        <div class="col-md-10">
            <div class="card shadow">
                <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
                    <h3 class="mb-0">Öğrenci Listesi</h3>
                    <a class="btn btn-success" asp-action="Create"><i class="bi bi-plus-circle"></i> Yeni Öğrenci</a>
                </div>
                <div class="card-body p-0">
                    <div class="table-responsive">
                        <table class="table table-striped table-hover mb-0">
                            <thead class="table-light">
                                <tr>
                                    <th>Ad</th>
                                    <th>Soyad</th>
                                    <th>Bölüm</th>
                                    <th>Öğrenci No</th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@item.Ad</td>
                                    <td>@item.Soyad</td>
                                    <td>@item.Bolum?.BolumAd</td>
                                    <td>@item.OgrenciNo</td>
                                    <td>
                                        <a asp-action="Edit" asp-route-id="@item.OgrenciID" class="btn btn-sm btn-warning me-1"><i class="bi bi-pencil"></i> Düzenle</a>
                                        <a asp-action="Details" asp-route-id="@item.OgrenciID" class="btn btn-sm btn-info me-1"><i class="bi bi-info-circle"></i> Detay</a>
                                        <a asp-action="Delete" asp-route-id="@item.OgrenciID" class="btn btn-sm btn-danger"><i class="bi bi-trash"></i> Sil</a>
                                    </td>
                                </tr>
                            }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>