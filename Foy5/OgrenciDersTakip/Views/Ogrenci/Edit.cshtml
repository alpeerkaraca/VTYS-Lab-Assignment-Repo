@model OgrenciDersTakip.Models.TOgrenci
@{
    ViewData["Title"] = "Öğrenci Düzenle";
    var bolumler = ViewBag.Bolumler as List<OgrenciDersTakip.Models.TBolum>;
}
<h2>Öğrenci Düzenle</h2>
<form asp-action="Edit">
    <input type="hidden" asp-for="OgrenciID" />
    <div class="form-group">
        <label>Ad</label>
        <input asp-for="Ad" class="form-control" />
        <span asp-validation-for="Ad" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label>Soyad</label>
        <input asp-for="Soyad" class="form-control" />
        <span asp-validation-for="Soyad" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label>Bölüm</label>
        <select asp-for="BolumID" class="form-control" asp-items="@(new SelectList(bolumler, "BolumID", "BolumAd", Model.BolumID))"></select>
        <span asp-validation-for="BolumID" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label class="form-label">Öğrenci No</label>
        <input asp-for="OgrenciNo" class="form-control" required />
        <span asp-validation-for="OgrenciNo" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-success">Kaydet</button>
    <a asp-action="Index" class="btn btn-secondary">Geri</a>
</form>